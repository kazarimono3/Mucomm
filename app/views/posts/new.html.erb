<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        楽曲を投稿する　※MP3フォーマットのみ対応
      </div>
      
      <div class="card-body">
        <%= form_with model: @post, class: "upload-audios p-0 border-0" do |f| %>
          <div class="form-group row mt-2">
            <div class="col pl-0">
              <%= f.text_field :caption, class: "form-control border-0", placeholder: "曲名やコンセプトを記入してください" %>
            </div>
          </div>

          <div class="mb-3">
  					<%= f.fields_for :audios do |i| %>
    				<%= i.file_field :audio, :size => 140 %>
  					<% end %>
					</div>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>